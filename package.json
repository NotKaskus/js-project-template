{
	"name": "project-template",
	"version": "1.0.0",
	"description": "template",
	"main": "./src/index.js",
	"scripts": {
		"dev": "nodemon",
		"fix": "yarn fix:code && yarn fix:format",
		"fix:format": "yarn prettier --write {src,tests}/**/*.{js,json}",
		"fix:code": "yarn run lint",
		"lint": "eslint --ignore-path .gitignore --ext .js --fix",
		"test": "node ./tests/index.js",
		"commit": "git-cz",
		"cz": "git-cz",
		"prepare": "husky install .github/husky"
	},
	"author": "NotKaskus",
	"license": "MIT",
	"devDependencies": {
		"@commitlint/cli": "16.2.3",
		"@commitlint/config-conventional": "16.2.1",
		"@sapphire/prettier-config": "1.4.3",
		"@wildpeaks/eslint-config-commonjs": "15.4.0",
		"@wildpeaks/prettier-config": "15.4.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "8.13.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-prettier": "4.0.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.8",
		"nodemon": "2.0.15",
		"prettier": "2.6.2",
		"pretty-quick": "^3.1.3"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/NotKaskus/template.git"
	},
	"bugs": {
		"url": "https://github.com/NotKaskus/template/issues"
	},
	"engines": {
		"node": ">=v16.14.2",
		"npm": ">=7.0.0"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"packageManager": "yarn@3.2.0"
}
